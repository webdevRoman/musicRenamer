doctype html
html(lang="ru")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    meta(http-equiv="X-UA-Compatible", content="ie=edge")
    link(rel="stylesheet", href="/css/style.css")
    title Переименовалка
  body
    form(action="#", id="form").form
      .form-block
        label(for="input-path").label Входной путь
        input(type="text", name="input-path", id="input-path").input.input-text
      .form-block
        label(for="files").label Файлы
        input(type="file", name="files", id="files", multiple, accept=".mp3").input.input-files
      .form-block
        label(for="output-path").label Выходной путь
        input(type="text", name="output-path", id="output-path").input.input-text
      .form-block
        button(type="submit").button Переименовать
        button(id='reset').button Сбросить
    .pop-up успешно
    script(src="/js/app.js")